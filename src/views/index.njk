{% macro alertBlock(alert) %}
  <div class="alert alert-{{ alert.class }} {% if isClosable %}alert-dismissible fade show {% endif %}">

    {% if alert.title %}
      <h4 class="alert-heading">
        {{ alert.title }}
      </h4>
    {% endif %}
    {% if alert.text %}
      <p>
        {{ alert.text }}
      </p>
      {% if alert.errors %}
        <ul>
          {% for error in alert.errors %}
            <li>
              {{ error }}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endif %}
    {% if isClosable %}
      <button
        type="button"
        class="close"
        data-dismiss="alert"
      >
        &times;
      </button>
    {% endif %}
  </div>
{% endmacro %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    >
    <meta
      http-equiv="X-UA-Compatible"
      content="ie=edge"
    >
    <title>{{ env.APP_NAME }}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.min.css"
    >
    <style>
      body {
        background-image: url("/img/png/background.png");
      }
      .pwd-visible-emoji {
        display: none;
      }
      .btn-toggle-pwd.pwd-visible > .pwd-visible-emoji {
        display: inline-block;
      }
      .btn-toggle-pwd.pwd-visible > .pwd-hidden-emoji {
        display: none;
      }
      .guard-image {
        width: 100px;
        height: auto;
      }
      .grecaptcha-badge {
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
          <a
            class="d-block m-auto text-center text-dark py-3"
            href="/"
          >
            <img
              class="guard-image"
              src="/img/svg/guard.svg"
            />
            <h1>{{ env.APP_NAME }}</h1>
          </a>
          <div class="text-center loading-indicator">
            <div
              class="spinner-grow"
              style="width: 5rem; height: 5rem;"
            >
            </div>
          </div>
          <main class="content d-none">
            {% if alert %}
              {{ alertBlock(alert) }}
            {% endif %}
            {% if hasAccess %}
              <div class="text-right">
                <a
                  class="btn btn-danger"
                  href="/logout"
                >
                  Logout
                </a>
              </div>
            {% else %}
              <form
                class="form"
                method="post"
                action="/"
              >
                <div class="form-group">
                  <label for="email">
                    Email
                  </label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="password">
                    Password
                  </label>
                  <div class="input-group">
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      minlength="6"
                      required
                    />
                    <div class="input-group-append">
                      <button
                        class="btn btn-outline-secondary btn-toggle-pwd"
                        type="button"
                      >
                        <span class="pwd-hidden-emoji">
                          üòù
                        </span>
                        <span class="pwd-visible-emoji">
                          üòú
                        </span>
                      </button>
                    </div>
                  </div>
                </div>
                <input
                  id="captcha"
                  type="hidden"
                  name="captcha"
                />
                <div class="row justify-content-between">
                  <div class="col-6 col-sm-5 order-1">
                    <button
                      type="submit"
                      name="action"
                      value="login"
                      class="btn btn-success btn-login btn-block"
                    >
                      Login
                    </button>
                  </div>
                  <div class="col-6 col-sm-5 order-0">
                    <button
                      type="submit"
                      name="action"
                      value="register"
                      class="btn btn-outline-primary btn-register btn-block"
                    >
                      Register
                    </button>
                  </div>
                </div>
              </form>
            {% endif %}
          </main>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render={{ env.RECAPTCHA_CLIENT_KEY }}"></script>
    <script>
      var $pwdInput = $('#password');
      var $pwdToggleBtn = $('.btn-toggle-pwd');
      var $captchaInput = $('#captcha');
      var $content = $('.content');
      var $loadingIndicator = $('.loading-indicator');

      grecaptcha.ready(function () {
        grecaptcha
          .execute('{{ env.RECAPTCHA_CLIENT_KEY }}', { action: 'homepage' })
          .then(function (token) {
            $captchaInput.val(token);
            $content.removeClass('d-none');
            $loadingIndicator.addClass('d-none');
          });
      });

      $pwdToggleBtn.click(function () {
        if ($pwdInput.attr('type') === 'text') {
          $pwdInput.attr('type', 'password');
          $pwdToggleBtn.removeClass('pwd-visible');
        } else {
          $pwdInput.attr('type', 'text');
          $pwdToggleBtn.addClass('pwd-visible');
        }
      });
    </script>
  </body>
</html>
